### window management
# set focus
ctrl - up : yabai -m window --focus north
ctrl - right : yabai -m window --focus east
ctrl - down : yabai -m window --focus south
ctrl - left : yabai -m window --focus west
cmd - tab : yabai -m window --focus recent

# set focus (h, j, k, l)
#ctrl - k : yabai -m window --focus north
#ctrl - l : yabai -m window --focus east
#ctrl - j : yabai -m window --focus south
#ctrl - h : yabai -m window --focus west

# move window
ctrl + shift - up : yabai -m window --swap north
ctrl + shift - right : yabai -m window --swap east
ctrl + shift - down : yabai -m window --swap south
ctrl + shift - left : yabai -m window --swap west

# move window (h, j, k, l)
#ctrl + shift - k : yabai -m window --swap north
#ctrl + shift - l : yabai -m window --swap east
#ctrl + shift - j : yabai -m window --swap south
#ctrl + shift - h : yabai -m window --swap west

# move window to another workspace
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6
ctrl + shift - 7 : yabai -m window --space 7
ctrl + shift - 8 : yabai -m window --space 8
ctrl + shift - 9 : yabai -m window --space 9
ctrl + shift - 0 : yabai -m window --space 10


# close window
ctrl - q : yabai -m window --close

# set window mode
ctrl - f : yabai -m window --toggle zoom-fullscreen
ctrl + shift - f : yabai -m window --toggle native-fullscreen
ctrl - space : yabai -m window --toggle float


### workspace navigation
# 1 - 10 workspace keys
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 10

# L/R workspace navigation
ctrl + cmd - left : yabai -m space --focus prev
ctrl + cmd - right : yabai -m space --focus next

# L/R workspace navigation (h, l)
ctrl + cmd - h : yabai -m space --focus prev
ctrl + cmd - l : yabai -m space --focus next

# recent workspace navigation
ctrl - tab : yabai -m space --focus recent


### application hotkeys
#ctrl - return : open -na $(which kitty) --single-instance
ctrl - return : exec $(which kitty) --single-instance
ctrl + shift - w : open -na /Applications/Firefox.app
